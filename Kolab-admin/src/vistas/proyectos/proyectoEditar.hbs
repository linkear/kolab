<link rel="stylesheet" href="">
<div id="contenido">
    {{#each proyectos}}
    <form action="/proyecto/Editar/{{idProyecto}}" method="post">
        {{/each}}
        {{#each proyectos}}
        <div id="NombreProyecto">
            <label>Nombre del Proyecto:</label>
            <input type="text" name="NombreProyecto" id="nombre" value="{{NombreProyecto}}" checked>
        </div>
        <div id="Descripcion">
            <label>Descripcion del Proyecto:</label>
            <textarea name="DecripcionProyecto" id="descripcion" maxlength="1500"
                aria-checked="true">{{DecripcionProyecto}}</textarea>
        </div>
        <div id="Fecha">
            <label>Fecha del Proyecto:</label>
            <input type="text" name="fechaProyecto" id="fecha" value="{{fechaProyecto}}" checked>
        </div>
        <div id="Vision">
            <label>Vision:</label>
            <input type="text" name="Vision" id="vision" value="{{visionProyecto}}" checked>
        </div>
        <div id="Mision">
            <label>Mision:</label>
            <input type="text" name="Mision" id="mision" value="{{MisionProyecto}}" checked>
        </div>
        {{/each}}
        <div id="objetivos">
            <label>Objetivos:</label>
            {{#each detalle}}
            <input type="text" id="objetivos" name="objetivos" value="{{objetivos}}" checked>
            <div id="Eliminar">
                <a href="/proyecto/EliminarObjetivo/{{idDetalleProyecto}}"><button>Eliminar</button></a>
            </div>
            {{/each}}
        </div>
        {{#each proyectos}}
        <form action="/proyecto/Aumentar/{{idProyecto}}" method="post">
            {{/each}}
            <div id="objetivos">
                <label>Objetivos:</label>
                <input type="text" id="numeros" placeholder="Ingrese su nÃºmero de objetivos" checked>
            </div>

            <div id="listaObjetivos"></div>

            <div id="boton">
                <button type="button" onclick="objetivos.crear()">Objetivos</button>
            </div>
        </form>
        <div id="Guardar">
            <button type="submit">Actualizar</button>
        </div>
    </form>
</div>


<script src="/js/objetivos.js"></script>