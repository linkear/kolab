<link rel="stylesheet" href="">

<div id="contenido">
    <form action="/proyecto/Agregar/{{user.idUsuarios}}" method="post">
        <div id="rol">
            {{#each rol}}
            <input type="text" name="rol" id="rol" value="{{nombreRol}}" readonly>
            {{/each}}
        </div>

        <div id="numeroPoryecto">
            <label> Proyecto N°</label>
            {{#each idProyecto}}
            <input type="text" name="text" id="numero" value="{{'max(idProyecto)'}}" readonly>
            {{/each}}
        </div>

        <div id="NombreProyecto">
            <label>Nombre del Proyecto:</label>
            <input type="text" name="NombreProyecto" id="nombre" checked>
        </div>

        <div id="Descripcion">
            <label>Descripción del Proyecto:</label>
            <textarea name="DecripcionProyecto" id="descripcion" maxlength="1500" aria-checked="true"></textarea>
        </div>
        <div id="Fecha">
            <label>Fecha de Creación del Proyecto:</label>
            <input type="date" name="fechaProyecto" id="fecha" checked>
        </div>

        <div id="Vision">
            <label>Visión:</label>
            <input type="text" name="Vision" id="vision" checked>
        </div>

        <div id="Mision">
            <label>Misión:</label>
            <input type="text" name="Mision" id="mision" checked>
        </div>

        <div id="objetivos">
            <label>Objetivos:</label>
            <input type="text" id="numeros" placeholder="Ingrese su número de objetivos" checked>
        </div>

        <div id="listaObjetivos"></div>

        <div id="boton">
            <button type="button" onclick="objetivos.crear()">Objetivos</button>
        </div>

        <div id="Guardar">
            <button type="submit">Guardar</button>
        </div>
    </form>
</div>

<script src="/js/numero.js"></script>
<script src="/js/objetivos.js"></script>
